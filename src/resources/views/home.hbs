<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col col-sm-6 col-lg-4">
            <div class="my-course">
                <div class="card" style="height: 400px">
                    <a href="courses/{{this.slug}}">
                        <img style="width: 100%; height: 171px;object-fit:contain;" class="card-img-top"
                            src={{this.thumb_nail}} alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p style="width: 288px; height: 96px; display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 4;overflow: hidden;"
                            class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Đăng ký học</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>