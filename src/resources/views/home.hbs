<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col col-sm-6 col-lg-4">
            <div class="my-course">
                <div class="card">
                    <a href="courses/{{this.slug}}">
                        <img class="card-img-top" src={{this.thumb_nail}} alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Đăng ký học</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>